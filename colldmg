    private void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.gameObject.tag == CollisionTag)
        {
            Health health = collision.gameObject.GetComponent<Health>();
            health.TakeHit(_collisionDamage);
            Debug.Log(health.health);
            Destroy(gameObject);
        }
    }
}
